# gems
alias bundle="rbenv exec bundle";
alias cowa="bundle exec compass watch";

# install assets
alias boi="bower install";
alias biv="bundle install --path=vendor";

# random
PROJ_DIR="$HOME/projects";
alias getdaily="./copyDbByParameters.sh -i daily_copy";

# Image optimization
IMG_OP_DIR="$HOME/_imgoptimize";
imgop () {
    if [ $1 ]; then
        mv $1 $IMG_OP_DIR;
    fi

    cd $IMG_OP_DIR;
    rm -rf _compressed/;
    compressimages;
    cd -;
}

# EM Random Image Server
alias eis-change="php /var/www/projects/random-image.em.lan/scripts/change.php";
