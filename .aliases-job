# EM Random Image Server
EM_RANDOM_IMAGE_SERVER_PATH="/var/www/projects/random-image.em.lan";
alias eis-dir="cd $EM_RANDOM_IMAGE_SERVER_PATH";
alias eis-change="php $EM_RANDOM_IMAGE_SERVER_PATH/scripts/change.php";
eis-new () {
    if [ $# -eq 0 ]; then
        echo "\u2718 ERROR: You failed to provide a file ... "
        echo ""
        sleep 3
        echo "So now you have to watch nyan cat \u2665! har har har"
        sleep 2
        nyan
    else
        mv $1 "$EM_RANDOM_IMAGE_SERVER_PATH/pics"
        if [ $? -eq 0 ]; then
            echo "\u2714 Image '$1' successfully added to random-image.em.lan queue"
        fi
    fi
}
