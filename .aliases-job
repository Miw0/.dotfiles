# Shopware specific
swdb () {
    if [ ! -f swi.phar ]; then
        echo "✗ No swi.phar found, sorry."
        return false;
    fi

    php-7.1.0 swi.phar -r;
    cd public;
    php-7.1.0 bin/console sw:theme:dump:configuration;
    cd themes;
    grunt production --force;
    cd "../../";
    echo "✔ Shopware database recovered & frontend built."
}

# Image optimization
IMG_OP_DIR="$HOME/_imgoptimize";
imgop () {
    if [ $1 ]; then
        mv $1 $IMG_OP_DIR;
    fi

    cd $IMG_OP_DIR;
    rm -rf _compressed/;
    compressimages;
    cd -;
}

